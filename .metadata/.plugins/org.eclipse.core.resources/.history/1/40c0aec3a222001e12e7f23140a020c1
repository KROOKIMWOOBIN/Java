package Level_1;

public class pro_12943 
{
    public static int solution(long num) 
    {
        for(int i = 1; i <= 500; i++)
        {
        	if(num % 2 == 0)
        	{
        		num = num / 2;
        	}
        	else
        	{
        		num = num * 3 + 1;
        	}
        	if(num == 1)
        	{
        		return i;
        	}
        }
        return -1;
    }
}
