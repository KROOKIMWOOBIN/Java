package Level_1;

public class Number_of_P_and_Y {
	
	public boolean solution(String s) {
		boolean answer = true;
		int p = 0;
		int y = 0;
		
		for(int i = 0; i < s.length(); i++) {
			String c = Character.toString(s.charAt(i));
			if(c == "p" || c == "P") {
				p++;
			}else if(c == "y" || c == "Y") {
				y++;
			}
		}

		if((p + y) % 2 != 0) {
			answer = false;
		} 
		if(p == 0 && y == 0) {
			answer = true;
		}
		
		return answer;
	}
	
	public static void main(String[] args) {
		System.out.println(new Number_of_P_and_Y().solution("Pypy")); 
	}
	
}
