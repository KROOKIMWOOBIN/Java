package Level_2;

public class pro_42883 
{
	public static void main(String[] args) 
	{
		System.out.println(solution("1555", 2));
	}
	public static String solution(String number, int k) 
	{
        StringBuilder answer = new StringBuilder();
        int n = number.length(); // 문자열 길이
        int reString = n - k; // 남은 문자 중 가져와야 하는 문자 개수
        int start = 0; // 시작 인덱스
        
        while(reString > 0)
        {
        	char maxDigit = '0';
        	int maxIndex = start;
        	
        	for(int i = start; i <= n - reString; i++)
        	{
        		if(number.charAt(i) > maxDigit)
        		{
        			maxDigit = number.charAt(i);
        			maxIndex = i;
        		}
        	}
        	answer.append(maxDigit);
        	start = maxIndex + 1;
        	reString--;
        }
        return answer.toString();
    }
}
