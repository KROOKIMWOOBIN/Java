package Level_2;

public class pro_12924 {

	public static int solution(int n) {     
        
		int sum = 0;
		
		for(int i = 1; i <= n; i++) {
			sum += i;
			if(sum == n) {
				return sum;
			}
		}
		
		solution(n);
		return 0;
    }
	
	public static void main(String[] args) {
		System.out.println(solution(10));
	}

}
