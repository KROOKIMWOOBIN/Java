package Level_1;

public class pro_12943 
{
    public static int solution(int num) 
    {
        int i = 1;
        while(i <= 50)
        {
        	if(num % 2 == 0)
        	{
        		num = num / 2;
        	}
        	else
        	{
        		num = num * 3 + 1;
        	}
            if(num == 1)
            {
                return i;
            }
        	i++;
        }
        return -1;
    }
}
