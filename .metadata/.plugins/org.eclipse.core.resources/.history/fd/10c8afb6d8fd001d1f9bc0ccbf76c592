package Level_1;

public class N_Numbers_Spaced_By_X {

	public long[] solution(int x, int n) {
		long[] answer = new long[n + 1];
		
		for(int i = 0; i < n; i++) {
			answer[i] = x;
			x += x;
		}
			
		return answer;
	}
	
	public static void main(String[] args) {
		
		N_Numbers_Spaced_By_X NX = new N_Numbers_Spaced_By_X();
		NX.solution(2, 5);
		
	}

}
